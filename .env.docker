# Docker Environment Variables
# Copy this file to .env and update with your values

# PostgreSQL/TimescaleDB
POSTGRES_USER=corretor
POSTGRES_PASSWORD=corretor123
POSTGRES_DB=corretor_ai_hub

# Redis
REDIS_PASSWORD=redis123

# pgAdmin (optional - used with `docker-compose --profile tools up`)
PGADMIN_EMAIL=admin@corretor.com
PGADMIN_PASSWORD=admin123

# Application Database URL (for local development)
DATABASE_URL=postgresql://corretor:corretor123@localhost:5432/corretor_ai_hub

# Redis URL (for local development)
REDIS_URL=redis://:redis123@localhost:6379/0

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# When running the app inside Docker, use these URLs instead:
# DATABASE_URL=postgresql://corretor:corretor123@timescaledb:5432/corretor_ai_hub
# REDIS_URL=redis://:redis123@redis:6379/0
# QDRANT_HOST=qdrant
